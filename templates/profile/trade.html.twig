<div class="container">
    <h1>Hi Trade user</h1>
    <h2 class="h3 text-center">Your Shortlists:</h2>
    <div>
        <ul class="list-group">
            {% if shortlists is defined %}
                {% for shortlist in shortlists %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-column align-content-center">
                            <h5 class="mb-1">{{ shortlist.project.title }}</h5>
                            <p class="mb-1">{{ shortlist.project.description }}</p>
                            <small class="mt-1">Value : {{ shortlist.project.value }}</small>
                            <small>Status : <mark>{{ shortlist.project.status }}</mark></small>
                        </div>
                        <div class="d-flex justify-content-end align-items-center">
                            <span class="badge badge-success">Added</span>
                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
