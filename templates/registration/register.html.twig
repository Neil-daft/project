{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container login__Container">
        <div class="form-group">
            <h1 class="h3 mb-3">Register</h1>
        </div>

        {{ form_start(registrationForm) }}
        <div class="form-group">
            <label for="registration_form_email">Email</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">@</div>
                </div>
                {{ form_widget(registrationForm.email) }}
            </div>
        </div>
        <div class="form-group">
            <label for="registration_form_plainPassword_first">Password</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">P</div>
                </div>
                {{ form_widget(registrationForm.plainPassword) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(registrationForm.agreeTerms, {label_attr: {class: 'checkbox-custom'} }) }}
        </div>

        <div class="form-group">
            {{ form_widget(registrationForm.roles) }}
        </div>


        <button class="btn btn-outline-primary btn-block" type="submit">
            Register
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
